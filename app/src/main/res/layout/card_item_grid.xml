<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/card_item_grid"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    card_view:cardCornerRadius="@dimen/cardview_radius"
    card_view:cardPreventCornerOverlap="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_card_item"
        android:orientation="vertical"
        android:padding="@dimen/cardview_border">

        <ImageView
            android:id="@+id/image_item"
            android:layout_width="@dimen/image_width"
            android:layout_height="@dimen/image_height"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/text_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:minHeight="@dimen/text_min_height"
            android:padding="@dimen/item_text_padding_grid"
            android:textColor="@color/color_yellow_dark"
            android:textSize="@dimen/item_text_size_grid"
            android:textStyle="bold"/>
    </LinearLayout>
</android.support.v7.widget.CardView>

